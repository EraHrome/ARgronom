                <p class="text-center">Эффект удобрений</p>
                <a class="btn btn-default btn-outline text-center" href="/PersonalArea/UpdateEventTime/?plantId=@Model.UserPlant.PlantId&eventName=fertilizing">Удобрить</a>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    window.onload = () =>  {
        document.querySelector("#add-coords").addEventListener("click", () => {
            navigator.geolocation.getCurrentPosition((position) => {
                window.location.replace(`/Ar/AddCoord/?latit=${position.coords.latitude}&longit=${position.coords.longitude}&plantId=@Model.UserPlant.PlantId`);
            });
        });
    }
</script>